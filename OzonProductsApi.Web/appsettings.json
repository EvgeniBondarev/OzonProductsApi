{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Authentication": "Information"
    },
    "File": {
      "Path": "logs/myapp.log",
      "MaxFileSizeMB": 50,
      "MaxFiles": 7
    },
    "Console": {
      "FormatterName": "Simple",
      "FormatterOptions": {
        "SingleLine": true,
        "TimestampFormat": "HH:mm:ss "
      }
    }
  },
  "Jwt": {
    "SecretKey": "your-256-bit-secret-key-here-must-be-long-enough",
    "Issuer": "your-issuer",
    "Audience": "your-audience"
  },
  "AllowedHosts": "*"
}
